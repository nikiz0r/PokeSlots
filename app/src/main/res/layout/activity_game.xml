<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlGame"
    android:paddingBottom="@dimen/verticalPad"
    tools:context="com.fiap.rumenigue.slotmachine.GameActivity">

    <include layout="@layout/game_header"/>
    <include layout="@layout/game_footer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/game_header"
        android:layout_above="@+id/game_footer"
        android:id="@+id/llContainer"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSlot1"
            style="@style/icon_slot"/>

        <ImageView
            android:id="@+id/ivSlot2"
            style="@style/icon_slot"
            android:layout_marginLeft="@dimen/slot_sideMargin"
            android:layout_marginRight="@dimen/slot_sideMargin"/>

        <ImageView
            android:id="@+id/ivSlot3"
            style="@style/icon_slot"/>
    </LinearLayout>
</RelativeLayout>
